{% extends 'base.html' %}

{% block title %}订单支付 - 数字商店{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="bg-gray-800/80 rounded-xl p-8 border border-gray-700/50">
        <h1 class="text-2xl font-bold text-center mb-6 bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
            扫码支付
        </h1>

        <!-- 订单信息 -->
        <div class="bg-gray-700/50 rounded-lg p-4 mb-6">
            <div class="flex justify-between mb-2">
                <span class="text-gray-400">订单号：</span>
                <span class="text-white">{{ order.id }}</span>
            </div>
            <div class="flex justify-between mb-2">
                <span class="text-gray-400">商品：</span>
                <span class="text-white">{{ order.product.name }}</span>
            </div>
            <div class="flex justify-between">
                <span class="text-gray-400">金额：</span>
                <span class="text-2xl font-bold text-green-400">¥{{ order.total_amount }}</span>
            </div>
        </div>

        <!-- 二维码 -->
        <div class="bg-white rounded-lg p-6 text-center mb-6">
            <img src="{% url 'shop:qr_code' order.id %}" alt="支付二维码" class="mx-auto w-64 h-64">
            <p class="text-gray-600 mt-4">请使用微信扫码支付</p>
        </div>

        <!-- 支付状态提示 -->
        <div id="payment-status" class="text-center text-gray-400">
            <div class="animate-pulse">等待支付...</div>
        </div>
    </div>
</div>

<script>
// 轮询检查支付状态
const orderId = {{ order.id }};
const checkInterval = setInterval(() => {
    fetch(`{% url 'shop:payment_status' order.id %}`)
        .then(response => response.json())
        .then(data => {
            if (data.is_paid) {
                clearInterval(checkInterval);
                document.getElementById('payment-status').innerHTML =
                    '<div class="text-green-400 font-bold">支付成功！正在跳转...</div>';
                setTimeout(() => {
                    window.location.href = `/order/${data.order_id}/`;
                }, 1500);
            }
        });
}, 3000); // 每3秒检查一次

// 页面关闭时停止轮询
window.addEventListener('beforeunload', () => {
    clearInterval(checkInterval);
});
</script>
{% endblock %}
